    "default_project": "pybuildtool",
    "default_variant": "development",

    "python_version": "3.5",
    "virtualenv_dir": ".virtualenv",
    "waf_version": "1.9.9",

    "modules": [
        "fireh_runner.modules.setup",
        "fireh_runner.modules.pip",
