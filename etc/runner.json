        "fireh_runner.modules.waf"
    ],
    "setup_modules": [
        "fireh_runner.setup_modules.python",
        "fireh_runner.setup_modules.pybuildtool"
    ],

    "configuration": {
        "development": {
            "pybuildtool": {
                "work_dir": "."
            }
        }
    }
}
