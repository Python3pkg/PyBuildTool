concat:
    group_main_css:
        options:
            _source_sandboxed_: false
        items:
            -
                file-in:
                    - src/css/heading.css
                    - src/css/default.css
                file-out: css/style.css
    group_main_js:
        options:
            _source_sandboxed_: false
        items:
            -
                file-in:
                    - src/javascript/underscore.js
                    - src/javascript/default.js
                value-in:
                    - 'jslint:js_default'
                file-out: javascript/script.js
copy:
    group_main_css:
        options:
            _target_sandboxed_: false
        items:
            -
                file-in: css/style.css
                file-out: htdocs/css/style.css
    group_main_js:
        options:
            _target_sandboxed_: false
        items:
            -
                file-in: javascript/script.js
                file-out: htdocs/js/script.js
jslint:
    group_main_js:
        items:
            -
                file-in: src/javascript/default.js
                value-out: 'jslint:js_default'

